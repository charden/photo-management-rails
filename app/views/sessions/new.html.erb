<h1>ログイン</h1>
<% if @user&.errors.present? %>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li class="error"><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with url: login_path do |f| %>

  <%= f.label :name, 'ユーザーID' %>
  <%= f.text_field :name %><br/>
  <%= f.label :password, 'パスワード' %>
  <%= f.password_field :password %><br/>
  <%= f.submit "ログインする" %>
<% end %>
